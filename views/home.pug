html
  head
    title Trovata Mock API
    link(rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" type="text/css" href="assets/css/style.css")
  body

  div.col-sm-12.col-md-10.col-md-offset-1.col-lg-6.col-lg-offset-3
    h1.title TROVATA MOCK API
  div.col-sm-12.col-md-10.col-md-offset-1.col-lg-6.col-lg-offset-3.panel
    h2 Respositório de dados de mockup
    .row
      .input-group
        input(id="search", type="text", class="form-control", placeholder="Buscar...", value="")
        span.input-group-addon.btn-primary
          i.glyphicon.glyphicon-search
        a.btn.btn-success.form-control Novo
          span.glyphicon.glyphicon-plus
    .table-responsive
      table(class="table table-hover" id="mocksTable")
        thead
          tr
            th ID
            th Identificador
            th Versão
            th(colspan="2") Ações
        tbody
          tr
  script(src="jquery/jquery.min.js" type="text/javascript")
  script(src="axios/axios.min.js" type="text/javascript")
  script(src="assets/js/string_format.js" type="text/javascript")
  script(src="assets/js/home.js" type="text/javascript")